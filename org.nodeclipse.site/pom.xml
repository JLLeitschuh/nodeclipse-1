	<build>
		<plugins>
			<plugin>
				<groupId>com.github.github</groupId>
				<artifactId>site-maven-plugin</artifactId>
				<version>${github-site-maven-plugin-version}</version>
				<configuration>
					<repositoryOwner>Nodeclipse</repositoryOwner>
					<repositoryName>nodeclipse-1</repositoryName>
					<message>Releasing updatesite for ${project.version}</message>
					<path>updatesite</path>
					<oauth2Token>${env.githubuser_oauth2Token}</oauth2Token>
				</configuration>
				<executions>
					<execution>
						<goals>
							<goal>site</goal>
						</goals>
						<phase>site</phase>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>

